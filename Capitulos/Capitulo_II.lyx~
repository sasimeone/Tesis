\begin_layout Subsubsection
Irradiancia total
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
G_{T}=G_{dir}+G_{dif}+G_{ground}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
G_{ground}=GHI\cdot a\cdot(1-SVF)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
G_{dir}=DNI\cdot[cos(am)\cdot cos(as)+sen(am)\cdot sen(as)]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
G_{dif}=0.1\cdot G_{dir}
\]

\end_inset


\end_layout

